<?xml version="1.0" encoding="utf-8" standalone="no"?>
<GUI name="RmSettingsFrame">
    <GuiElement profile="fs25_menuContainer">

        <!-- Header with icon -->
        <GuiElement profile="fs25_menuHeaderPanel">
            <Bitmap profile="fs25_menuHeaderIconBg">
                <Bitmap profile="fs25_menuHeaderIcon" imageSliceId="gui.icon_options_generalSettings2"/>
            </Bitmap>
            <Text profile="fs25_menuHeaderTitle" text="$l10n_fresh_settings_title"/>
        </GuiElement>

        <!-- Settings container with scrolling -->
        <ScrollingLayout profile="fs25_settingsLayout" id="boxLayout">

            <!-- Section: Global Settings -->
            <Text profile="fs25_settingsSectionHeader" text="$l10n_fresh_settings_global"/>

            <!-- Enable Expiration toggle -->
            <Bitmap profile="fs25_multiTextOptionContainer" onCreate="onCreateSettingRow">
                <BinaryOption profile="fs25_settingsBinaryOption" id="checkEnableExpiration" onClick="onClickEnableExpiration">
                    <Text profile="fs25_multiTextOptionTooltip" name="ignore" text="$l10n_fresh_settings_enableExpiration_tooltip"/>
                </BinaryOption>
                <Text profile="fs25_settingsMultiTextOptionTitle" text="$l10n_fresh_settings_enableExpiration"/>
            </Bitmap>

            <!-- Show Warnings toggle -->
            <Bitmap profile="fs25_multiTextOptionContainer" onCreate="onCreateSettingRow">
                <BinaryOption profile="fs25_settingsBinaryOption" id="checkShowWarnings" onClick="onClickShowWarnings">
                    <Text profile="fs25_multiTextOptionTooltip" name="ignore" text="$l10n_fresh_settings_showWarnings_tooltip"/>
                </BinaryOption>
                <Text profile="fs25_settingsMultiTextOptionTitle" text="$l10n_fresh_settings_showWarnings"/>
            </Bitmap>

            <!-- Show Age Display toggle -->
            <Bitmap profile="fs25_multiTextOptionContainer" onCreate="onCreateSettingRow">
                <BinaryOption profile="fs25_settingsBinaryOption" id="checkShowAgeDisplay" onClick="onClickShowAgeDisplay">
                    <Text profile="fs25_multiTextOptionTooltip" name="ignore" text="$l10n_fresh_settings_showAgeDisplay_tooltip"/>
                </BinaryOption>
                <Text profile="fs25_settingsMultiTextOptionTitle" text="$l10n_fresh_settings_showAgeDisplay"/>
            </Bitmap>

            <!-- Section: Expiration Times (placeholder for fillType list) -->
            <Text profile="fs25_settingsSectionHeader" text="$l10n_fresh_settings_fillTypes"/>

            <!-- Template row for fillType selectors (hidden, removed after cloning) -->
            <Bitmap profile="fs25_multiTextOptionContainer" id="fillTypeRowTemplate" visible="false">
                <MultiTextOption profile="fs25_settingsMultiTextOption" name="fillTypeSelector"/>
                <Bitmap profile="rmFreshFillTypeIcon" position="10px -7px" size="30px 30px" name="fillTypeIcon"/>
                <Text profile="fs25_settingsMultiTextOptionTitle" position="50px 0px" name="fillTypeTitle"/>
            </Bitmap>

            <!-- FillType selector rows will be cloned from template above -->

        </ScrollingLayout>

    </GuiElement>
    <ThreePartBitmap profile="fs25_sliderDockedBg">
        <ThreePartBitmap profile="fs25_sliderDockedBox">
            <Slider profile="fs25_sliderDocked" dataElementId="boxLayout"/>
        </ThreePartBitmap>
    </ThreePartBitmap>
</GUI>
